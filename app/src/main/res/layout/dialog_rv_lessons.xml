<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_medium">

    <TextView
        android:id="@+id/dialog_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:layout_marginBottom="12dp"
        android:text="@string/title_dialog_rv_lessons"
        android:textSize="19sp" />

    <View
        style="?attr/lineColorStyle"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/dialog_textView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_dialog_lessons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewLine"
        android:layout_below="@+id/dialog_textView"
        android:layout_margin="@dimen/spacing_small"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <View
        android:id="@+id/viewLine"
        style="?attr/lineColorStyle"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_above="@+id/linLay" />


    <LinearLayout
        android:id="@+id/linLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="end"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_medium"
            android:text="@string/dialog_button_close"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>