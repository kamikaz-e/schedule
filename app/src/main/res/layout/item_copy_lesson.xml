<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_normal">

    <TextView
        android:id="@+id/educator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/spacing_normal"
        android:layout_toStartOf="@id/audience"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="16sp"
        tools:text="Понедельник" />

    <TextView
        android:id="@+id/audience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/spacing_normal"
        android:layout_toStartOf="@id/imageDelete"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="16sp"
        tools:text="8:00-10:00" />

    <ImageView
        android:id="@+id/imageDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/spacing_normal"
        android:maxLines="1"
        android:singleLine="true"
        android:src="@drawable/ic_clear_cross_black"
        android:textSize="16sp"
        tools:text="8:00-10:00" />

</RelativeLayout>
